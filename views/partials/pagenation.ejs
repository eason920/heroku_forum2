<%
	if( status === undefined ){
		var status = '';
	}
	if( hasStatus === undefined ){
		var hasStatus = false;
	}
%>
<nav class="my-5" aria-label="Page navigation example">
	<ul class="pagination justify-content-center">
		<li class="page-item <% if(!page.hasPrePN){ %>disabled<% } %>">
			<a class="page-link" href="
				<%= router %>?
				<% if(hasStatus){ %>
					status=<%= status %>&
				<% } %>
				pn=<%= page.currentPN - 1 %>" tabindex="-1">
				Previous
			</a>
		</li>
		<% for(var i = 1; i <= page.totalPN; i++){ %>
		<li class="page-item <% if(page.currentPN == i){ %>active<% } %>">
			<a class="page-link" href="
				<%= router %>?
				<% if(hasStatus){ %>
					status=<%= status %>&
				<% } %>
				pn=<%= i %>">
				<%= i %>
			</a>
		</li>
		<% } %>
		<li class="page-item <% if(!page.hasNexPN){ %>disabled<% } %>">
			<a class="page-link" href="
				<%= router %>?
				<% if(hasStatus){ %>
					status=<%= status %>&
				<% } %>
				pn=<%= page.currentPN + 1 %>">
				Next
			</a>
		</li>
	</ul>
</nav>